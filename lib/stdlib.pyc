// Math operations
action min (a, b):
    if a < b then
        report a
    else
        report b
    end
end

action max (a, b):
    if a > b then
        report a
    else
        report b
    end
end

action abs (num):
    if num < 0 then
        report num * -1
    else
        report num
    end
end

